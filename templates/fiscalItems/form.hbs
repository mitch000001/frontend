<form class="fiscal-item" action="/fiscalPeriods/{{ year }}/positions/new" method="post">
  <div class="row">
    <div class="large-12 columns">
      <h2>Position anlegen und bearbeiten</h2>
    </div>
  </div>

  <div class="row">
    <div class="large-4 columns">
      <label>Art *</label>
      <input type="radio" name="type" value="expense" id="typeExpense" {{#isExpense}}checked{{/isExpense}}>
      <label for="typeExpense">Ausgabe</label>
      <input type="radio" name="type" value="income" id="typeIncome" {{#isIncome}}checked{{/isIncome}}>
      <label for="typeIncome">Einnahme</label>
    </div>
    <div class="large-4 columns">
      <label>Konto</label>
      <input type="text" name="accountCode" placeholder="Identifikation" value="{{ account }}"/>
    </div>
    <div class="large-4 columns">
      <label>Kategorie</label>
      <input type="text" name="category" placeholder="Kategorie" value="{{ category }}" />
    </div>
  </div>

  <div class="row">
    <div class="large-4 columns">
      <label>Rechnungsdatum</label>
      <input type="date" name="invoiceDate" value="{{ invoiceDate }}">
    </div>
    <div class="large-4 columns">
      <label>Rechnungsnummer</label>
      <input type="text" name="invoiceNumber" placeholder="z.b. 2014-01-01" value="{{ invoiceNumber }}">
    </div>
    <div class="large-4 columns">
    </div>
  </div>

  <div class="row">
    <div class="large-12 columns">
      <label>Beschreibung</label>
      <input type="text" name="description" placeholder="Beschreibung" value="{{ description }}">
      <hr>
    </div>
  </div>

  <div class="row">
    <div class="large-4 columns">
      <div class="row collapse">
        <label>Betrag</label>
        <div class="small-8 columns">
          <input type="text" name="totalAmountCents" placeholder="Betrag" value="{{ totalAmount }}">
        </div>
        <div class="small-4 columns">
          <select class="postfix" name="currency">
            <option value="EUR">EUR</option>
            <option value="USD">USD</option>
          </select>
        </div>
      </div>
    </div>
    <div class="large-8 columns">
      <label>Umsatzsteuer</label>
      <input type="radio" name="tax" value="" id="noTax" {{#if withoutTax}}checked{{/if}}>
      <label for="noTax">nicht anwendbar</label>
      <input type="radio" name="tax" value="7" id="reducedTax" {{#if reducedTax}}checked{{/if}}>
      <label for="reducedTax">7 %</label>
      <input type="radio" name="tax" value="19" id="regularTax" {{#if regularTax}}checked{{/if}}>
      <label for="regularTax">19 %</label>
    </div>
  </div>
  <div class="row">
    <div class="large-12 columns">
      <hr>
      <div class="row">
        <div class="large-6 columns">

          <label>Anhang</label>
          <input type="file" id="attachment" name="attachment">
        </div>
        <div class="large-6 columns">
          {{#if attachmentPath}}
            <a href="{{ attachmentPath }}">Download</a>
          {{/if}}
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="large-12 columns">
      <div class="form-actions">
        <input class="tiny button" type="submit" value="Speichern"> oder <a href="#" data-cancel class="tiny button alert">abbrechen</a>
      </div>
    </div>
  </div>
</form>
