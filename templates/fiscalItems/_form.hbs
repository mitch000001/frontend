<form>
  <div class="row">
    <div class="large-12 columns">
      <h2>Position anlegen und bearbeiten</h2>
    </div>
  </div>

  <div class="row">
    <div class="large-4 columns">
      <label>Art *</label>
      <input type="radio" name="type" value="expense" id="typeExpense" checked>
      <label for="typeExpense">Ausgabe</label>
      <input type="radio" name="type" value="income" id="typeIncome">
      <label for="typeIncome">Einnahme</label>
    </div>
    <div class="large-4 columns">
      <label>Konto</label>
      <input type="text" placeholder="Identifikation" />
    </div>
    <div class="large-4 columns">
      <label>Kategorie</label>
      <input type="text" placeholder="Kategorie" />
    </div>
  </div>

  <div class="row">
    <div class="large-4 columns">
      <label>Rechnungsdatum</label>
      <input type="date" name="date">
    </div>
    <div class="large-4 columns">
      <label>Rechnungsnummer</label>
      <input type="text" name="invoiceNumber" placeholder="z.b. 2014-01-01">
    </div>
    <div class="large-4 columns">
    </div>
  </div>

  <div class="row">
    <div class="large-12 columns">
      <label>Beschreibung</label>
      <input type="text" name="description" placeholder="Beschreibung">
      <hr>
    </div>
  </div>

  <div class="row">
    <div class="large-4 columns">
      <div class="row collapse">
        <label>Betrag</label>
        <div class="small-8 columns">
          <input type="text" name="amount" placeholder="Betrag">
        </div>
        <div class="small-4 columns">
          <select class="postfix">
            <option value="EUR">EUR</option>
            <option value="USD">USD</option>
          </select>
        </div>
      </div>
    </div>
    <div class="large-8 columns">
      <label>Umsatzsteuer</label>
      <input type="radio" name="tax" value="" id="noTax" checked>
      <label for="noTax">nicht anwendbar</label>
      <input type="radio" name="tax" value="7" id="reducedTax">
      <label for="reducedTax">7 %</label>
      <input type="radio" name="tax" value="19" id="regularTax">
      <label for="regularTax">19 %</label>
    </div>
  </div>
  <div class="row">
    <div class="large-12 columns">
      <hr>
      <div class="row">
        <div class="large-6 columns">
          <label>Anhang</label>
          <input type="file" name="attachment">
        </div>
        <div class="large-6 columns  ">
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="large-12 columns">
      <div class="form-actions">
        <input class="tiny button" type="button" value="Speichern"> oder <a href="javascript:window.history.back();" class="tiny button alert">abbrechen</a>
      </div>
    </div>
  </div>
</form>
