<div class="row">
  <div class="large-12 columns">
    <h2>{{t "fiscalPeriods.headline" year=year}}</h2>

    <ul class="button-group small">
      <li>
        <a href="/#/years/{{ year }}/positions/new" class="tiny button">
          Neue Position anlegen
        </a>
      </li>
    </ul>

    <table class="{{ year }} items large-12">
      <thead>
        <tr>
          <th width="100">Datum</th>
          <th>Bezeichnung</th>
          <th width="175">Kategorie</th>
          <th width="125">Konto</th>
          <th width="100">Summe</th>
          <th width="50"></th>
        </tr>
      </thead>

      <tbody>
      </tbody>

      <tfoot>
        <tr>
          <td colspan="4"></td>
          <td colspan="2">{{ currency totalAmount }}</td>
        </tr>
      </tfoot>
    </table>
  </div>
</div>
