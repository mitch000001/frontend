<div class="row">
  <div class="large-12 columns">
    <h2>Positionen im Jahr {{ year }}</h2>

    <ul class="button-group small">
      <li>
        <a href="/#/years/{{ year }}/items/new" class="tiny button">
          Neue Position anlegen
        </a>
      </li>
    </ul>

    <table class="{{ year }} items large-12">
      <thead>
        <tr>
          <th>Datum</th>
          <th>Bezeichnung</th>
          <th>Kategorie</th>
          <th>Konto</th>
          <th>Summe</th>
        </tr>
      </thead>

      <tbody>
      </tbody>

      <tfoot>
        <tr>
          <td colspan="4"></td>
          <td>{{ currency total }}</td>
        </tr>
      </tfoot>
    </table>
  </div>
</div>
